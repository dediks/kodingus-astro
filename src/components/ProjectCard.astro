---
interface Props {
  title: string;
  description: string;
  href: string;
  tags?: string[];
}

const { title, description, href, tags = [] } = Astro.props;
---

<a href={href} class="project-card">
  <article>
    <header>
      <h3>{title}</h3>
      {tags.length > 0 && (
        <div class="tags">
          {tags.map(tag => <span class="tag">{tag}</span>)}
        </div>
      )}
    </header>
    <p>{description}</p>
    <div class="arrow">&rarr;</div>
  </article>
</a>

<style>
  .project-card {
    display: block;
    padding: 1.5rem;
    border: 1px solid var(--color-border);
    transition: all 0.2s ease;
    height: 100%;
  }

  .project-card:hover {
    background: var(--color-text);
    color: var(--color-bg);
    transform: translateY(-2px);
    opacity: 1; /* Override global hover opacity */
    box-shadow: 4px 4px 0px var(--color-border);
  }
  
  .project-card:hover .tag {
    border-color: var(--color-bg);
  }

  h3 {
    margin-top: 0;
    margin-bottom: 0.5rem;
    font-size: 1.25rem;
  }

  p {
    margin-bottom: 1.5rem;
    font-size: 0.95rem;
    line-height: 1.6;
    opacity: 0.9;
  }

  .tags {
    display: flex;
    gap: 0.5rem;
    margin-bottom: 1rem;
    flex-wrap: wrap;
  }

  .tag {
    font-size: 0.75rem;
    padding: 0.2rem 0.5rem;
    border: 1px solid var(--color-text);
    border-radius: 2px;
  }

  .arrow {
    margin-top: auto;
    font-weight: bold;
    text-align: right;
  }
</style>
