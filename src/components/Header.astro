---
const links = [
  { href: '/', labelEn: 'Home', labelId: 'Beranda' },
  { href: '/portfolio', labelEn: 'Portfolio', labelId: 'Portofolio' },
  { href: '/blog', labelEn: 'Blog', labelId: 'Blog' },
  { href: '/about', labelEn: 'About', labelId: 'Tentang' },
];
---

<header class="header">
  <div class="header-content">
    <div class="logo">
      <a href="/">KODINGUS</a>
    </div>
    
    <div class="header-actions">

      <button id="menu-toggle" class="menu-toggle" aria-label="Toggle Menu">
        <span class="bar"></span>
        <span class="bar"></span>
        <span class="bar"></span>
      </button>
    </div>

    <nav id="nav-menu" class="nav-menu">
      <ul>
        {links.map((link) => {
          const isActive = Astro.url.pathname === link.href || 
                           (link.href !== '/' && Astro.url.pathname.startsWith(link.href));
          return (
            <li>
              <a href={link.href} class={isActive ? 'active' : ''}>
                <span class="lang-en">{link.labelEn}</span>
                <span class="lang-id">{link.labelId}</span>
              </a>
            </li>
          );
        })}
      </ul>
      <div class="nav-controls">
        <div class="lang-toggle">
          <button id="lang-btn-en" class="active" aria-label="Switch to English">EN</button>
          <span class="separator">/</span>
          <button id="lang-btn-id" aria-label="Switch to Indonesia">ID</button>
        </div>

        <button id="theme-toggle" class="theme-toggle" aria-label="Toggle Dark Mode">
          <span class="sun-icon">☀</span>
          <span class="moon-icon">☾</span>
        </button>
      </div>
    </nav>
  </div>
</header>

<script>
  // Mobile Menu Logic
  function initMobileMenu() {
    const menuToggle = document.getElementById('menu-toggle');
    const navMenu = document.getElementById('nav-menu');

    if (menuToggle && navMenu) {
      // Clone to remove old listeners (cleanup for View Transitions)
      const newToggle = menuToggle.cloneNode(true);
      menuToggle.parentNode.replaceChild(newToggle, menuToggle);
      
      newToggle.addEventListener('click', () => {
        newToggle.classList.toggle('active');
        navMenu.classList.toggle('active');
        document.body.classList.toggle('no-scroll');
      });
      
      // Close menu when clicking a link
      navMenu.querySelectorAll('a').forEach(link => {
        // Clone links too to prevent duplicate listeners if necessary, 
        // but simplest is to just add the listener since navMenu is re-rendered or stable? 
        // Actually, if Header is re-rendered, these are new elements.
        // If Header is persistent, we need cleanup.
        // Let's assume re-render for safely, but if persist, this adds duplicates.
        // Better: use { once: true } or named function, OR rely on the fact that if re-rendered, it's fine.
        // BUT, since we clone menuToggle, we must reference the NEW newToggle in the closure.
        
        link.addEventListener('click', () => {
          newToggle.classList.remove('active');
          navMenu.classList.remove('active');
          document.body.classList.remove('no-scroll');
        });
      });
    }
  }

  // Global Language Logic
  function initLanguage() {
    const btnEn = document.getElementById('lang-btn-en');
    const btnId = document.getElementById('lang-btn-id');
    
    function setLanguage(lang) {
      localStorage.setItem('language', lang);
      document.documentElement.setAttribute('data-lang', lang);
      
      if (lang === 'en') {
        btnEn?.classList.add('active');
        btnId?.classList.remove('active');
      } else {
        btnId?.classList.add('active');
        btnEn?.classList.remove('active');
      }
    }

    const savedLang = localStorage.getItem('language') || 'en';
    setLanguage(savedLang);

    if (btnEn && btnId) {
      // Clean up old listeners to prevent duplicates on view transition
      const newBtnEn = btnEn.cloneNode(true);
      const newBtnId = btnId.cloneNode(true);
      btnEn.parentNode.replaceChild(newBtnEn, btnEn);
      btnId.parentNode.replaceChild(newBtnId, btnId);

      newBtnEn.addEventListener('click', () => setLanguage('en'));
      newBtnId.addEventListener('click', () => setLanguage('id'));
    }
  }

  // Dark Mode Logic
  function initTheme() {
    const themeToggle = document.getElementById('theme-toggle');
    
    function setTheme(theme) {
      localStorage.setItem('theme', theme);
      document.documentElement.setAttribute('data-theme', theme);
    }
    
    // Initial State is handled in Layout head script to prevent flash
    // We just need to attach listener here
    
    if (themeToggle) {
      const newToggle = themeToggle.cloneNode(true);
      themeToggle.parentNode.replaceChild(newToggle, themeToggle);
      
      newToggle.addEventListener('click', () => {
        const currentTheme = document.documentElement.getAttribute('data-theme') || 'light';
        const newTheme = currentTheme === 'light' ? 'dark' : 'light';
        setTheme(newTheme);
      });
    }
  }

  // Run on initial load
  initMobileMenu();
  initLanguage();
  initTheme();

  // Run on view transitions navigation
  document.addEventListener('astro:page-load', () => {
    initMobileMenu();
    initLanguage();
    initTheme();
  });
</script>

<style>
  .header {
    border-bottom: 1px solid var(--color-border);
    margin-bottom: 2rem;
    position: relative;
    z-index: 100;
    background: var(--color-bg);
  }

  .header-content {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 2rem 0;
  }

  .header-actions {
    display: flex;
    align-items: center;
    gap: 1.5rem;
    position: relative;
    z-index: 102; /* Ensure it stays above menu overlay */
  }

  .logo a {
    font-weight: 800;
    font-size: 1.5rem;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    position: relative;
    z-index: 102; /* Above menu overlay */
  }

  nav ul {
    display: flex;
    gap: 2rem;
    list-style: none;
    margin: 0;
    padding: 0;
  }

  nav a {
    font-size: 0.9rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    position: relative;
  }
  
  nav a.active {
    text-decoration: underline;
    text-underline-offset: 4px;
    opacity: 1; /* Ensure active link is fully opaque */
  }
  
  /* Nav Layout */
  .nav-menu {
    display: flex;
    align-items: center;
    gap: 2rem;
  }

  .nav-controls {
    display: flex;
    align-items: center;
    gap: 1.5rem;
    margin-left: 1rem;
    padding-left: 1rem;
    border-left: 1px solid var(--color-border);
  }

  /* Language Toggle Styles */
  .lang-toggle {
    display: flex;
    align-items: center;
    font-family: var(--font-heading);
    font-weight: 700;
  }
  
  .lang-toggle button {
    background: none;
    border: none;
    cursor: pointer;
    font-family: inherit;
    font-size: 0.9rem;
    font-weight: inherit;
    color: var(--color-text-muted);
    padding: 0;
    transition: color 0.2s ease;
  }
  
  .lang-toggle button.active {
    color: var(--color-text);
    text-decoration: underline;
  }
  
  .separator {
    margin: 0 0.3rem;
    color: var(--color-text-muted);
    font-size: 0.9rem;
  }

  /* Theme Toggle Styles */
  .theme-toggle {
    background: none;
    border: none;
    cursor: pointer;
    font-size: 1.2rem;
    padding: 0;
    line-height: 1;
    color: var(--color-text);
  }

  /* Show sun in dark mode, moon in light mode */
  :global(html[data-theme="dark"]) .moon-icon { display: none; }
  :global(html[data-theme="dark"]) .sun-icon { display: block; }
  
  :global(html:not([data-theme="dark"])) .moon-icon { display: block; }
  :global(html:not([data-theme="dark"])) .sun-icon { display: none; }

  /* Mobile Menu Styles */
  .menu-toggle {
    display: none;
    flex-direction: column;
    justify-content: space-between;
    width: 30px;
    height: 21px;
    background: transparent;
    border: none;
    cursor: pointer;
    padding: 0;
    z-index: 102; /* Above menu overlay */
  }

  .bar {
    width: 100%;
    height: 3px;
    background-color: var(--color-text);
    transition: all 0.3s ease;
  }

  @media (max-width: 768px) {
    .menu-toggle {
      display: flex;
    }
    
    /* Make sure header actions stay aligned */
    .header-actions {
      gap: 1rem;
    }

    .nav-menu {
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      height: 100vh;
      background-color: var(--color-bg);
      display: flex;
      flex-direction: column;
      justify-content: center;
      align-items: center;
      transform: translateY(-100%);
      transition: transform 0.3s ease-in-out;
      z-index: 101;
      gap: 2rem;
    }

    .nav-menu.active {
      transform: translateY(0);
    }

    .nav-menu ul {
      flex-direction: column;
      align-items: center;
      gap: 2rem;
    }
    
    .nav-controls {
      display: flex;
      flex-direction: row; /* Keep row in mobile for controls */
      align-items: center;
      gap: 2rem;
      margin-left: 0;
      padding-left: 0;
      border-left: none; /* Remove separator on mobile */
      margin-top: 1rem;
    }

    .nav-menu a {
      font-size: 1.5rem; /* Larger font for mobile */
    }

    /* Hamburger Animation */
    .menu-toggle.active .bar:nth-child(1) {
      transform: translateY(9px) rotate(45deg);
    }

    .menu-toggle.active .bar:nth-child(2) {
      opacity: 0;
    }

    .menu-toggle.active .bar:nth-child(3) {
      transform: translateY(-9px) rotate(-45deg);
    }
  }
  
  :global(body.no-scroll) {
    overflow: hidden;
  }

  /* Global Language Visibility */
  :global(.lang-en), :global(.lang-id) {
    display: none;
  }
  
  :global(html:not([data-lang])) :global(.lang-en),
  :global(html[data-lang="en"]) :global(.lang-en) {
    display: block;
  }

  :global(html[data-lang="id"]) :global(.lang-id) {
    display: block;
  }
</style>
