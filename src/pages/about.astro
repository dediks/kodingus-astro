<style>
  .about-section {
    display: grid;
    grid-template-columns: 1fr;
    gap: 4rem;
    margin-top: 2rem;
  }

  @media (min-width: 768px) {
    .about-section {
      grid-template-columns: 1fr 2fr;
    }
  }

  .profile-container {
    position: relative;
    width: fit-content;
    /* Removed margin: 0 auto; to align left with layout */
  }

  .profile-image {
    width: 100%;
    max-width: 280px;
    height: auto;
    aspect-ratio: 1 / 1;
    object-fit: cover;
    border-radius: 4px;
    filter: grayscale(100%);
    border: 1px solid var(--color-border);
    display: block;
  }

  .profile-text {
    position: absolute;
    bottom: -1rem;
    right: -2rem;
    font-family: var(--font-heading);
    font-weight: 800;
    font-size: 4rem;
    color: var(--color-text);
    z-index: 10;
    line-height: 1;
    background: var(--color-bg); /* Optional: to make it pop over grid lines */
    padding: 0 0.5rem;
  }

  h1 {
    font-size: 3rem;
    margin-top: 0;
    margin-bottom: 1.5rem;
    text-transform: uppercase;
  }

  h2 {
    font-size: 1.5rem;
    margin-bottom: 1rem;
    text-transform: uppercase;
    margin-top: 2.5rem;
  }

  .lead {
    font-size: 1.25rem;
    font-weight: 600;
    margin-bottom: 1.5rem;
    line-height: 1.4;
  }

  p {
    margin-bottom: 1.5rem;
    line-height: 1.8;
  }

  .skills-list {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    flex-wrap: wrap;
    gap: 1rem;
  }

  .skills-list li {
    background: var(--color-bg-alt);
    padding: 0.5rem 1rem;
    border: 1px solid var(--color-border);
    font-size: 0.9rem;
    font-weight: 600;
  }

  .contact-methods {
    margin-top: 3rem;
    padding-top: 2rem;
    border-top: 1px solid var(--color-border);
  }

  .social-links-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
    gap: 1rem;
    margin-top: 2rem;
  }

  .social-link {
    display: flex;
    flex-direction: column;
    align-items: center; /* Center icon */
    justify-content: center;
    padding: 1.5rem; /* Increase padding */
    border: 1px solid var(--color-border);
    transition: all 0.2s ease;
    gap: 0.5rem;
  }

  .social-link:hover {
    background: var(--color-text);
    color: var(--color-bg);
    transform: translateY(-2px);
  }

  .social-link svg {
    width: 32px;
    height: 32px;
    margin-bottom: 0.5rem;
  }

  .social-link .handle {
    font-weight: 600;
    font-family: var(--font-heading);
    font-size: 0.9rem;
  }

  /* Visibility Logic based on Global State */
  .lang-en,
  .lang-id {
    display: none; /* Hidden by default to prevent flash */
    animation: fadeIn 0.3s ease;
  }

  /* Default show EN if NO data-lang present (fallback) */
  :global(html:not([data-lang])) .lang-en {
    display: block;
  }

  /* Show based on data-lang attribute */
  :global(html[data-lang="en"]) .lang-en {
    display: block;
  }

  :global(html[data-lang="id"]) .lang-id {
    display: block;
  }

  @keyframes fadeIn {
    from {
      opacity: 0;
      transform: translateY(5px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
</style>
